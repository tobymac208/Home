<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:controller="home.Controller"
            xmlns:fx="http://javafx.com/fxml">

    <top>
        <Label text="Login | Register" wrapText="true" BorderPane.alignment="CENTER" >
            <font>
                <Font name="Arial" size="25" />
            </font>
        </Label>
    </top>

    <center>
        <VBox>
            <TextField promptText="username" fx:id="username_reg" onKeyReleased="#keyReleased_Register" />
            <PasswordField promptText="password" fx:id="password_reg" onKeyReleased="#keyReleased_Register" />
            <PasswordField promptText="verify password" fx:id="password_reg_verify" onKeyReleased="#keyReleased_Register" />
            <HBox>
                <Button text="Register" fx:id="register" onAction="#register" />
                <Label fx:id="registerError" textFill="red" />
            </HBox>

            <TextField promptText="username" fx:id="username" onKeyReleased="#keyReleased_Login" />
            <PasswordField promptText="password" fx:id="password" onKeyReleased="#keyReleased_Login" />
            <Button text="Login" fx:id="login" onAction="#login" />


            <Label text="Delete all accounts?" />
            <Button text="Delete" onAction="#deleteAllAccounts" />
        </VBox>
    </center>

    <left>
        <GridPane BorderPane.alignment="TOP_CENTER">
            <VBox GridPane.rowIndex="0">
                <Label text="Login Status:" />
                <Label fx:id="currentAccount"/>
            </VBox>
            <VBox GridPane.rowIndex="1">
                <Label text="Date:" />
                <Label fx:id="currentDate" />
            </VBox>
        </GridPane>
    </left>
</BorderPane>